useDynLib(lme4a, .registration=TRUE)

import(Matrix)
import(grid)
import(lattice)
import(splines)

importFrom(graphics, plot)
importFrom(stats, AIC, anova, coef, confint, deviance, fitted, formula,
           logLik, model.frame, model.matrix, predict, profile,
           resid, residuals, simulate, terms, vcov)

export(HPDinterval, VarCorr, devcomp, env, getBounds, getPars, glmer,
       lmList, lmer, lmer2, mcmcsamp, nlmer, refit, setPars, sigma)

exportClasses(ST, lmList, mer, merMCMC, summary.mer, optenv)

exportMethods(BIC, HPDinterval, VarCorr, anova, as.matrix, as.data.frame,
              chol, coef, coerce, confint, densityplot, deviance, expand,
              fitted, fixef, formula, getBounds, getPars, head, logLik,
              mcmcsamp, model.frame, model.matrix, plot, print, profile,
              qqmath, ranef, refit, resid, residuals, setPars, show, sigma,
              simulate, summary, tail, terms, update, vcov, with, xyplot)

S3method(plot, coef.mer)
S3method(print, coef.mer)
S3method(dotplot, coef.mer)
S3method(plot, ranef.mer)
S3method(print, ranef.mer)
S3method(qqmath, ranef.mer)
S3method(dotplot, ranef.mer)
S3method(xyplot, thpr)
S3method(confint, thpr)
S3method(splom, thpr)
S3method(log, thpr)
