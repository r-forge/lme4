useDynLib(lme4a, .registration=TRUE)

import(Matrix)# including update()
import(lattice)
import(splines)
## Generics defined in stats4
importFrom(stats4,
           AIC,
           BIC,
           coef,
           confint,
           logLik,
           plot,
           profile,
           ## update, -- already from 'Matrix'
           vcov
           )
importFrom(stats,
           anova,
           deviance,
           fitted,
           formula,
           model.frame,
           model.matrix,
           predict,
           residuals, resid, # 'resid' needed too, unfortunately..
           simulate,
           terms)
## import("stats") is not ok, because Matrix exports "better" versions of
## update(), xtabs() and cov2cor()

export(
