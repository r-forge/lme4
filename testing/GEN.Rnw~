Get data:
<<>>=
dfiles <- list.files(pattern=paste(prob,"_.*.RData",sep=""))
LL <- lapply(dfiles,getdat)
names(LL) <- gsub(paste(prob,"_([^.]+)\\.RData",sep=""),
                  "\\1",dfiles)
